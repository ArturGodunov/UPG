include includes/vars
include includes/mixins

doctype html
html(lang='en')
    include includes/blocks/head
    body.footer(data-welcome)

        include includes/blocks/header

        block panel_top_configuration
            section.panel_top.panel_top__bottom_md
                .wrapper
                    h2.panel_title.panel_title__dark Transaction Summary Report
                    .row.m-t
                        .col-1
                            label.label(for='input_1')
                                span.panel_subtitle Date From
                                input.input(id='input_1' type='text' placeholder='From')
                        .col-1
                            label.label(for='input_2')
                                span.panel_subtitle Date To
                                input.input(id='input_2' type='text' placeholder='To')
                        .col-2
                            div.label(data-select)
                                .panel_subtitle Compare To
                                select.select
                                    option(selected) Pay Pal
                                .select_pseudo Pay Pal
                                ul.select_list
                                    - for (var i=0; i < 5; i++)
                                        li.select_item.body_row(data-select-item) Pay Pal#{i}
                        .right.m-t-sm
                            button.button.button__big.button__grey refresh

        block transactions
            section.main_content.main_content__gray

                section.slider_content.slider_content__total
                    .head.head__light
                        .wrapper
                            each val in [['Processor','Title'],['Percentage fee','Transaction'],['Fixed fee','Transaction'],['Count','Transaction'],['Sum','Transaction'],['Total Per','Transaction Fee'],['Total','Percentage Fee'],['Fees Paid','Total']]
                                .slider_col
                                    .head_text.head_text__title= val[0]
                                    .head_text.head_text__subtitle= val[1]
                    .slider_body
                        form
                            - for (var i=0; i < 5; i++)
                                .body_row.body_row__padding_sm.body_row__error
                                    .wrapper
                                        .slider_col
                                            .table_text Authorize.net
                                        .slider_col
                                            .table_text 2.90
                                        .slider_col
                                            .table_text 0.30
                                        .slider_col
                                            .table_text 5.00
                                        .slider_col
                                            .table_text 169.00
                                        .slider_col
                                            .table_text 1.50
                                        .slider_col
                                            .table_text 4.90
                                        .slider_col
                                            .table_text 6.40
                            .body_row.body_row__padding_sm.body_row__error.body_row__total
                                .wrapper.flex
                                    .slider_col
                                        .table_text.text-upper.text-black total
                                    .slider_col
                                    .slider_col
                                    .slider_col
                                        .table_text.text-black 5.00
                                    .slider_col
                                        .table_text.text-black 169.00
                                    .slider_col
                                        .table_text.text-black 1.50
                                    .slider_col
                                        .table_text.text-black 4.90
                                    .slider_col
                                        .table_text.text-black 6.40
                            .body_row.body_row__padding_sm.body_row__error.body_row__dark
                                .table_text Compare to PAY PAL
                            .body_row.body_row__padding_sm.body_row__error
