include includes/vars
include includes/mixins

doctype html
html(lang='en')
    include includes/blocks/head
    body

        header.header.clr
            .wrapper
                a.logo_link(href='/')
                    img.logo(src='images/black_logo__small.png' alt='Unified Payment Gateway')
                .header_top
                    .greeting Hello, <span class="greeting_name">Admin</span>!
                    a.log_off(href='index1.html' title='Log off') Log off
                nav.menu
                    ul.menu_list
                        each val, i in ['Rules','Processors','Transactions','Reports','Logs','Users','Configuration','License']
                            li.menu_item
                                if i == 0
                                    a.menu_link.active(href='/' title=val)= val
                                else
                                    a.menu_link(href='/' title=val)= val

        section.panel_top
            .wrapper
                button.panel_button.panel_button__light.button_hover_active Create New Rule
                h2.panel_title.panel_title__light Processor Selection
                h4.panel_subtitle Rules Parametres

        section.rules.col-6
            .rules_head.clr
                .wrapper.wrapper__half_left
                    each val in [['rule','Status/Number'],['name','Rule tittle/Creator'],['date','Modified'],['actions','View']]
                        .rules_col
                            .rules_head_text.rules_head_text__title= val[0]
                            .rules_head_text.rules_head_text__subtitle= val[1]
            .rules_body
                - for (var i=0; i < 10; i++)
                    .rules_row
                        .wrapper.wrapper__half_left
                            .rules_button.button_hover_active(class= i == 0 ? 'active' : '')
                                .rules_col
                                    .rules_body_text.rules_body_text__number 1
                                .rules_col
                                    .rules_body_text.rules_body_text__title Best Profit
                                    .rules_body_text Patrick Black
                                .rules_col
                                    .rules_body_text 6/18/2015
                                    .rules_body_text 12:01:10 PM
                                .rules_col
                                    .rules_review

        section.rules_description.col-6
            .wrapper.wrapper__half_right.clr
                h2.rules_title Rule #1
                button.rules_options.rules_options__edit.button_hover_active Edit
                button.rules_options.rules_options__delete.button_hover_active Delete

                h5.rules_description_title Rule Name
                .rules_name Best Profit
                .rules_status.right
                    .rules_status_text Active<br>Status
                    button.rules_activation.button_hover_active on
                    button.rules_activation.disabled.button_hover_active off

                h5.rules_description_title Creator Name
                .rules_creator Patrick Blacknight
                .rules_description_text.right patrickblacknight@gmail.com

                h5.rules_description_title Description
                .rules_description_text.
                    Description text description text description text description text description text description
                    text ext description text description text description text description text description text
                    ext description text description text description text description text description text
                    description text description text description text description text description text description
                    text description text

                h5.rules_description_title.text-upper Payment Processors
                .rules_payment_wrap
                    .rules_payment.rules_payment__available
                        .rules_payment_title Available
                        ul.rules_payment_list
                            - for (var i=0; i < 12; i++)
                                li.rules_payment_item.checked.button_hover_active Authorize.net
                    .rules_payment_arrow.rules_payment_arrow__right
                    .rules_payment_arrow.rules_payment_arrow__left
                    .rules_payment.rules_payment__assigned
                        .rules_payment_title Assigned
                        ul.rules_payment_list.rules_payment_list__numeric
                            - for (var i=0; i < 13; i++)
                                li.rules_payment_item.button_hover_active(class= i == 0 ? 'active' : '') Authorize.net
                                    .arrow.arrow__up
                                    .arrow.arrow__down
                .right.m-t.m-b-xl
                    button.rules_payment_button.rules_payment_button__cancel.button_hover_active cancel
                    button.rules_payment_button.rules_payment_button__safe.button_hover_active safe






    include includes/blocks/scripts