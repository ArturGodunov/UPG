extends index0

block main

    block panel_top_configuration
        section.panel_top.panel_top__bottom_md
            .wrapper
                h2.panel_title.panel_title__dark Error log records
                .row.m-t
                    .col-1
                        +selectSuper('Page Size', '25')
                    .col-1
                        +selectSuper('Page', '1')
                    .col-2
                        +selectSuper('Severity Type', 'All')
                    .col-1
                        +labelInput(1, 'Page', '', true)

    block error_log
        section.main_content

            section.slider_content.slider_content__error
                .head.head__light
                    .wrapper
                        each val in [['Log id','Title'],['Message','Notification'],['stack trace','Notification'],['Date','Date/Time'],['Severity','Status'],['Machine','Name'],['Total','Title'],['process','Name']]
                            .slider_col
                                .head_text.head_text__title= val[0]
                                .head_text.head_text__subtitle= val[1]
                .slider_body
                    form
                        - for (var i=0; i < 7; i++)
                            .body_row.body_row__slider_padding_sm.body_row__error
                                .wrapper.flex
                                    .slider_col
                                        .table_text 6
                                    .slider_col
                                        textarea.textarea
                                    .slider_col
                                        textarea.textarea
                                    .slider_col
                                        .table_text
                                            div 07/08/2015
                                            .text-nowrap.m-t-xs 05:40:43 AM
                                    .slider_col
                                        .table_text Error
                                    .slider_col
                                        .table_text.text-upper SERVER
                                    .slider_col
                                        .table_text 17616
                                    .slider_col
                                        .table_text w3wp.exe