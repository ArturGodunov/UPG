                                            .table_text.text-upper X6TYWJ
                                        .slider_col
                                            .table_text 2235575474
                                        .slider_col
                                            a.table_text(data-popup-big) Authorize.net
                                        .slider_col
                                            .table_text Authorization
                                        .slider_col
                                            .table_text Approved
                                        .slider_col
                                            .table_text 25.00
                                        .slider_col
                                            .table_text
