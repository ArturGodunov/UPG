                                .slider_col
                                    .head_text.head_text__title= val[0]
                                    .head_text.head_text__subtitle= val[1]
                    .slider_body
                        form
                            - for (var i=0; i < 9; i++)
                                .body_row.body_row__padding_sm.body_row__error
                                    .wrapper.flex
                                        .slider_col
                                            a.table_text.tooltip_link(data-tooltip-block title='' data-popup-small) 182345123452345678
